---
import './hero.css';
import Boton from '../atoms/Boton.astro';
import Snackbar from '../snackbar/Snackbar.astro';
---

<section class="hero">

	<div class="hero__container">
		<div class="text__content">
			<h1 class="hero__title color__gradiente">Ezequiel Falcon</h1>
			<p class="hero__text">
				Hi, I'm a Software Engineer from Argentina with expertise in Java and a few more technologies.
			</p>
			<Boton id="contactme" href="mailto:info@exzequielfalcon.com" texto="Contact me"/>
		</div>
    <img
		class="hero__img"
		src="/img/eze-falcon.jpg"
		alt="Ezequiel Falcon"
		width="384"
    	height="384"
	/>
	</div>
	<Snackbar id="contactMeSnackbar"></Snackbar>
</section>

<script>
	import { showSnackbar } from '../snackbar/snackbar.js';

	function handleClick () {
		navigator.clipboard.writeText("info@ezequielfalcon.com");
		showSnackbar('contactMeSnackbar', 'My email info@ezequielfalcon.com has been copied to your clipboard');
	}
	document.getElementById("contactme").addEventListener("click", handleClick);
</script>
